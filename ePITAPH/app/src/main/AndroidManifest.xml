<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cpsc4150.epitaph">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EPITAPH">
        <activity android:name="cpsc4150.epitaph.activities.MemorialViewActivity"></activity>
        <activity android:name="cpsc4150.epitaph.activities.CreateMemorialActivity" />
        <activity android:name="cpsc4150.epitaph.activities.VisitMenuActivity" />
        <activity android:name="cpsc4150.epitaph.activities.CodeMemorialActivity" />
        <activity android:name="cpsc4150.epitaph.activities.SavedMemorialsActivity" />
        <activity android:name="cpsc4150.epitaph.activities.LocalMemorialsActivity" />
        <activity android:name="cpsc4150.epitaph.activities.OpeningMenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>